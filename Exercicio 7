#include <stdio.h>
#include <stdlib.h>

int main()
{
    int salariovelho,salarionovo;

    printf("Insira seu salario: \n");
    scanf("%d",&salariovelho);

    if(salariovelho<500)
    {
        salarionovo=salariovelho*1.3;
        printf("O novo salario e: %d",salarionovo);
    }
    else
        printf("Nao tem direito a aumento.");

    return 0;
}
